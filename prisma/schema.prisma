generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String @id @default(cuid())
  username String @unique
  password String
  role     String @default("user")
  email    String? @unique
}

model Product {
  id          String  @id @default(cuid())
  name        String
  description String?
  price       Float
  stock       Int     @default(0)
  category    String
  imageUrl    String?
}

model Order {
  id           String   @id @default(cuid())
  customerName String
  productName  String
  quantity     Int
  totalAmount  Float
  status       String   @default("pending")
  createdAt    DateTime @default(now())
}

model RawMaterial {
  id          String  @id @default(cuid())
  name        String
  price       Float
  stock       Int     @default(0)
  unit        String
  description String?
}